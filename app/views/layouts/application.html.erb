<!DOCTYPE html>
<html>
  <head>
    <title>MUSIC fanS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <% if customer_signed_in? %>
    <header>
      <div><%= link_to 'Help', public_artists_path, class: "edit_link" %></div>
      <div><%= link_to 'Artists', public_artists_path, class: "edit_link" %></div>
      <div><%= link_to 'Songs', public_songs_path, class: "edit_link" %></div>
      <div><%= link_to 'Community', public_communities_path, class: "edit_link" %></div>
      <div><%= link_to 'Blog', public_blogs_path, class: "edit_link" %></div>
      <div><%= link_to 'Logout',  destroy_customer_session_path, method: :delete, class: "edit_link" %></div>
    </header>
  <% end %>
  <div class="container_cover"> 
    <div class="container">
      <body>
        <%= yield %>
      </body>
    </div>
  </div>
</html>