<div align="center">

  <h3>アーティスト一覧</h3>

  <% @artists.each do |artist| %>
  <% if artist.is_active == true %>
    <div class="flex">
	  <div class="artist_box">
	  	<div class="shadow_box">
		  <%= image_tag artist.image_id.to_s %>
		</div>
		<br>
		<%= artist.name %>
		<br>
		<a href="/public/artists/<%= artist.id %>" class="btn btn-gradient"><span>VIEW MORE</span></a>

  <% if artist.favorited_by?(current_customer) %>
    <%= link_to public_artist_favorites_path(artist), method: :delete do %>
        ❤︎<%= artist.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to public_artist_favorites_path(artist), method: :post do %>
        ♡<%= artist.favorites.count %>
    <% end %>
  <% end %>

	  </div>
    </div>
  <% end %>
  <% end %>

</div>