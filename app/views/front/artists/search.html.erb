<div align="center">

  <h3>アーティスト一覧</h3>

<%= form_with(url: search_front_artists_path, local: true, method: :get, class: "search-form") do |f| %>
  <%= f.text_field :keyword, placeholder: "アーティストを検索する", class: "artistsearch_input" %>
  <%= button_tag type: :submit, class: "search_btn" do %>
    <%= image_tag "search.png" %>
  <% end %>
<% end %>
<div class="contents">
  <div class="row"></div>
</div>

  <% @artists.each do |artist| %>
  <% if artist.is_active == true %>
    <div class="flex">
	  <div class="artist_box">
	  	<div class="shadow_box">
		  <%= image_tag artist.image_id.to_s %>
		</div>
		<br>
		<%= artist.name %>
		<br>
		<a href="/front/artists/<%= artist.id %>" class="btn btn_viewmore"><span>VIEW MORE</span></a>

  <div class="artist_<%= artist.id %>">
    <%= render 'front/artists/favorite', artist: artist, locals: {artist: artist} %>
  </div>

	  </div>
    </div>
  <% end %>
  <% end %>
</div>