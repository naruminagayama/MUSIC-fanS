<div align="center">

  <h3>楽曲一覧</h3>

<%= form_with(url: search_front_songs_path, local: true, method: :get, class: "search-form") do |f| %>
  <%= f.text_field :keyword, placeholder: "楽曲を検索する", class: "search-input" %>
  <%= button_tag type: :submit, class: "search_btn" do %>
    <%= image_tag "search.png" %>
  <% end %>
<% end %>
<div class="contents">
  <div class="row"></div>
</div>

  <% @songs.each do |song| %>
  <% if song.is_active == true %>
    <div class="flex">
    <div class="artist_box">
      <div class="shadow_box">
      <%= image_tag song.image_id.to_s %>
    </div>
    <br>
    <%= song.name %>
    <br>
    <a href="/front/songs/<%= song.id %>" class="btn btn_viewmore"><span>VIEW MORE</span></a>
    </div>
    </div>
  <% end %>
  <% end %>

</div>