<% if song.favorited_by?(current_customer) %>
  <%= link_to front_song_favorite_songs_path(song), method: :delete, remote: true do %>
    ❤︎<%= song.favorite_songs.count %>
  <% end %>
  <% else %>
    <%= link_to front_song_favorite_songs_path(song), method: :post, remote: true do %>
      ♡<%= song.favorite_songs.count %>
  <% end %>
<% end %>

<% if flash.any? %>
  <script type="text/javascript">
    <% flash.each do |key, value| %>
      <% key = "success" if key == "notice" %>
      <% key = "error" if key == "alert" %>
      toastr['<%= key %>']('<%= value %>');
    <% end %>
  </script>
<% end %>