<h2>My page</h2>
  <% if @customer.image_id? %>
    <%= image_tag @customer.image_id.url, :size => '100x100', class: 'icon' %>
   <% else %>
    <%= image_tag "noimage", :size => '100x100', class: 'icon' %>
   <% end %>
  <table class="table">
    <tr>
      <th>nickname</th><td><%= @customer.nickname %></td>
    </tr>
    <tr>
      <th>email</th><td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>follow</th><td><%= link_to @customer.follower.count, front_follower_path %></td>
    </tr>
    <tr>
      <th>follower</th><td><%= link_to @customer.followed.count, front_followed_path %></td>
    </tr>
    <% unless @customer == current_customer %>
      <tr>
        <td>
          <% if current_customer.following?(@customer) %>
            <%= link_to 'フォロー外す', front_unfollow_path(@customer.id), method: :post %>
          <% else %>
            <%= link_to 'フォローする', front_follow_path(@customer.id), method: :post %>
          <% end %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td><%= link_to '編集する', edit_front_customer_path(current_customer) %></td>
    </tr>
  </table>